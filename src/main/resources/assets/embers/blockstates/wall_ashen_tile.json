{
    "multipart": [
        {   "when": { "up": "true" },
            "apply": { "model": "embers:wall_ashen_tile_post" }
        },
        {   "when": { "north": "true" },
            "apply": { "model": "embers:wall_ashen_tile_side", "uvlock": true }
        },
        {   "when": { "east": "true" },
            "apply": { "model": "embers:wall_ashen_tile_side", "y": 90, "uvlock": true }
        },
        {   "when": { "south": "true" },
            "apply": { "model": "embers:wall_ashen_tile_side", "y": 180, "uvlock": true }
        },
        {   "when": { "west": "true" },
            "apply": { "model": "embers:wall_ashen_tile_side", "y": 270, "uvlock": true }
        }
    ]
}